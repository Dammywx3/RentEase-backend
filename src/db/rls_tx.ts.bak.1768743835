// src/db/rls_tx.ts
import type { PoolClient } from "pg";
import type { FastifyInstance, FastifyRequest } from "fastify";
import { setPgContext } from "./set_pg_context.js";

/**
 * Always use this for any route that touches RLS-protected tables.
 * Pattern:
 *   const client = await app.pg.connect();
 *   try { await withRlsTx(app, req, client, async (c) => { ... }) }
 *   finally { client.release(); }
 */

export type RlsCtx = {
  userId: string;
  organizationId: string;
  role?: string | null;
  eventNote?: string | null;
};

export type RlsTxOptions = {
  /**
   * Force UTC per-transaction (recommended).
   */
  forceUtc?: boolean;

  /**
   * If you want to override the role/eventNote for this transaction.
   */
  role?: string | null;
  eventNote?: string | null;
};

/**
 * Extract ctx in a consistent way across your app.
 * - req.orgId is set by authenticate middleware (after header+token match checks)
 * - req.user is normalized by middleware/auth.ts
 */
export function getRlsCtxFromReq(req: FastifyRequest): RlsCtx {
  const organizationId = String((req as any).orgId ?? "").trim();

  // Your normalized req.user has { userId, organizationId, role }
  const user = (req as any).user ?? null;

  const userId = String(user?.userId ?? user?.id ?? (req as any).userId ?? (req as any).sub ?? "").trim();
  const role = (user?.role ?? (req as any).role ?? null) as string | null;

  if (!userId) {
    const err: any = new Error("Missing authenticated user");
    err.code = "USER_ID_MISSING";
    throw err;
  }
  if (!organizationId) {
    const err: any = new Error("Organization not resolved (x-organization-id/orgId)");
    err.code = "ORG_REQUIRED";
    throw err;
  }

  return { userId, organizationId, role };
}

/**
 * RLS-safe transaction wrapper:
 *   BEGIN
 *   SET LOCAL TIME ZONE 'UTC' (optional)
 *   setPgContext(..., LOCAL=true)
 *   run callback
 *   COMMIT / ROLLBACK
 *
 * IMPORTANT:
 * - set_config(..., true) is LOCAL to the transaction â†’ avoids pool leakage.
 * - Always BEGIN before setPgContext so LOCAL sticks.
 */
export async function withRlsTx<T>(
  app: FastifyInstance,
  req: FastifyRequest,
  client: PoolClient,
  fn: (client: PoolClient) => Promise<T>,
  opts: RlsTxOptions = {}
): Promise<T> {
  const ctx = getRlsCtxFromReq(req);

  // allow per-call overrides
  const role = opts.role ?? ctx.role ?? null;
  const eventNote = opts.eventNote ?? null;

  try {
    await client.query("BEGIN");

    if (opts.forceUtc !== false) {
      await client.query("SET LOCAL TIME ZONE 'UTC'");
    }

    await setPgContext(client, {
      userId: ctx.userId,
      organizationId: ctx.organizationId,
      role,
      eventNote,
    });

    const result = await fn(client);

    await client.query("COMMIT");
    return result;
  } catch (e) {
    try {
      await client.query("ROLLBACK");
    } catch {}
    // log once here (optional). Routes can also log.
    try {
      (req as any)?.log?.error?.(e);
    } catch {}
    throw e;
  }
}

/**
 * Convenience helper (optional):
 * Handles connect/release for you.
 *
 * Usage:
 *   return withAppRlsTx(app, req, async (client) => { ... })
 */
export async function withAppRlsTx<T>(
  app: FastifyInstance,
  req: FastifyRequest,
  fn: (client: PoolClient) => Promise<T>,
  opts: RlsTxOptions = {}
): Promise<T> {
  const client = await (app as any).pg.connect();
  try {
    return await withRlsTx(app, req, client, fn, opts);
  } finally {
    client.release();
  }
}

/**
 * Small error mapping you can reuse in routes.
 */
export function mapRlsCtxError(e: any): { status: number; body: any } | null {
  if (e?.code === "ORG_REQUIRED") {
    return { status: 400, body: { ok: false, error: "ORG_REQUIRED", message: "x-organization-id required" } };
  }
  if (e?.code === "USER_ID_MISSING") {
    return { status: 401, body: { ok: false, error: "UNAUTHORIZED", message: "Missing authenticated user" } };
  }
  return null;
}